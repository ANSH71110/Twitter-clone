<%if current_user.id!=@user.id%>
    <% if Follow.where(user_id:current_user.id,following_id:@user.id)==[]%>
        <h5><%= button_to "Follow", follow_path(@user.id), method: "POST", class:"btn btn-primary"  %></h5>
    <% else %>
        <h5><%= button_to "Unfollow", unfollow_path(@user.id), method: "POST", class:"btn btn-danger" %></h5>
    <%end%>
<% end %>

<br>

<%= link_to 'Followers', followers_path(@user) %>
<%= link_to 'Following', following_path(@user) %>